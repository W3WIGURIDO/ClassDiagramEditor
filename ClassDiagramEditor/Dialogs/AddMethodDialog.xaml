<Window x:Class="ClassDiagramEditor.Dialogs.AddMethodDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="メソッドを追加" 
        Height="320" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- メソッド名 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="メソッド名 *" FontWeight="SemiBold" Margin="0,0,0,5" FontSize="13"/>
            <TextBox x:Name="NameTextBox" 
                     Padding="8" 
                     FontSize="13"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1"/>
        </StackPanel>

        <!-- 戻り値の型 -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="戻り値の型 *" FontWeight="SemiBold" Margin="0,0,0,5" FontSize="13"/>
            <ComboBox x:Name="ReturnTypeComboBox" 
                      Padding="8" 
                      FontSize="13"
                      BorderBrush="#CCCCCC"
                      IsEditable="True">
                <ComboBoxItem Content="void" IsSelected="True"/>
                <ComboBoxItem Content="string"/>
                <ComboBoxItem Content="int"/>
                <ComboBoxItem Content="double"/>
                <ComboBoxItem Content="bool"/>
                <ComboBoxItem Content="decimal"/>
                <ComboBoxItem Content="DateTime"/>
                <ComboBoxItem Content="Task"/>
                <ComboBoxItem Content="Task&lt;T&gt;"/>
                <ComboBoxItem Content="IEnumerable&lt;T&gt;"/>
                <ComboBoxItem Content="object"/>
            </ComboBox>
        </StackPanel>

        <!-- アクセス修飾子 -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="アクセス修飾子" FontWeight="SemiBold" Margin="0,0,0,5" FontSize="13"/>
            <ComboBox x:Name="AccessModifierComboBox" 
                      Padding="8" 
                      FontSize="13"
                      BorderBrush="#CCCCCC">
                <ComboBoxItem Content="Public" IsSelected="True"/>
                <ComboBoxItem Content="Private"/>
                <ComboBoxItem Content="Protected"/>
                <ComboBoxItem Content="Internal"/>
            </ComboBox>
        </StackPanel>

        <!-- 注記 -->
        <Border Grid.Row="3" 
                Background="#E3F2FD" 
                Padding="10"
                CornerRadius="3"
                BorderBrush="#2196F3"
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="💡 ヒント" 
                           FontWeight="Bold" 
                           FontSize="12"
                           Foreground="#1976D2"
                           Margin="0,0,0,5"/>
                <TextBlock Text="パラメータの追加機能は今後実装予定です。現在は引数なしのメソッドのみ作成できます。" 
                           TextWrapping="Wrap"
                           FontSize="11"
                           Foreground="#555555"/>
            </StackPanel>
        </Border>

        <!-- ボタン -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="OK" 
                    Width="100" 
                    Height="35"
                    Margin="0,0,10,0" 
                    Click="OkButton_Click" 
                    IsDefault="True"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="13"
                    Cursor="Hand"/>
            <Button Content="キャンセル" 
                    Width="100" 
                    Height="35"
                    Click="CancelButton_Click" 
                    IsCancel="True"
                    Background="#E0E0E0"
                    Foreground="#333333"
                    BorderThickness="0"
                    FontSize="13"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>