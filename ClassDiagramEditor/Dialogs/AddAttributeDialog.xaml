<Window x:Class="ClassDiagramEditor.Dialogs.AddAttributeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="属性を追加" 
        Height="280" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 属性名 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="属性名 *" FontWeight="SemiBold" Margin="0,0,0,5" FontSize="13"/>
            <TextBox x:Name="NameTextBox" 
                     Padding="8" 
                     FontSize="13"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1"/>
        </StackPanel>

        <!-- データ型 -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="データ型 *" FontWeight="SemiBold" Margin="0,0,0,5" FontSize="13"/>
            <ComboBox x:Name="DataTypeComboBox" 
                      Padding="8" 
                      FontSize="13"
                      BorderBrush="#CCCCCC"
                      IsEditable="True">
                <ComboBoxItem Content="string" IsSelected="True"/>
                <ComboBoxItem Content="int"/>
                <ComboBoxItem Content="double"/>
                <ComboBoxItem Content="bool"/>
                <ComboBoxItem Content="decimal"/>
                <ComboBoxItem Content="DateTime"/>
                <ComboBoxItem Content="Guid"/>
                <ComboBoxItem Content="List&lt;T&gt;"/>
                <ComboBoxItem Content="Dictionary&lt;TKey, TValue&gt;"/>
                <ComboBoxItem Content="object"/>
            </ComboBox>
        </StackPanel>

        <!-- アクセス修飾子 -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="アクセス修飾子" FontWeight="SemiBold" Margin="0,0,0,5" FontSize="13"/>
            <ComboBox x:Name="AccessModifierComboBox" 
                      Padding="8" 
                      FontSize="13"
                      BorderBrush="#CCCCCC">
                <ComboBoxItem Content="Private" IsSelected="True"/>
                <ComboBoxItem Content="Public"/>
                <ComboBoxItem Content="Protected"/>
                <ComboBoxItem Content="Internal"/>
            </ComboBox>
        </StackPanel>

        <!-- ボタン -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="OK" 
                    Width="100" 
                    Height="35"
                    Margin="0,0,10,0" 
                    Click="OkButton_Click" 
                    IsDefault="True"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="13"
                    Cursor="Hand"/>
            <Button Content="キャンセル" 
                    Width="100" 
                    Height="35"
                    Click="CancelButton_Click" 
                    IsCancel="True"
                    Background="#E0E0E0"
                    Foreground="#333333"
                    BorderThickness="0"
                    FontSize="13"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>